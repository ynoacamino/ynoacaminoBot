{
  "compilerOptions": {
    "target": "ES6",               
    "module": "ESNext",            
    "strict": true,                
    "esModuleInterop": true,       
    "skipLibCheck": true,          
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",            
    "rootDir": "./src",            
    "moduleResolution": "node",
  },
  "include": ["src/**/*.ts"],      
  "exclude": ["node_modules"]      
}
